{
  "main": "main.js",
  "scripts": {
    "start": "NODE_ENV=develop electron -r babel-register .",
    "lint:js": "eslint ./src/renderer && eslint ./src/main",
    "lint:js:fix": "eslint ./src/renderer --fix && eslint ./src/main --fix",
    "lint:css": "node node_modules/.bin/stylelint ./src/renderer",
    "build": "NODE_ENV=production webpack -p",
    "package-mac": "rm -rf release-builds && electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds",
    "package-win": "rm -rf release-builds && electron-packager . electron-react --overwrite --asar=true --platform=win32 --arch=ia32 --icon=assets/icons/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Electron React\"",
    "package-linux": "rm -rf release-builds && electron-packager . electron-react --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/icons/png/icon.png --prune=true --out=release-builds",
    "test": "node ./node_modules/.bin/jest"
  },
  "dependencies": {
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "recompose": "^0.27.1",
    "styled-components": "^3.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.54",
    "@strv/eslint-config-javascript": "^8.0.1",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^23.4.0",
    "babel-loader": "^7.1.5",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^2.0.0-beta.2",
    "babel-preset-react": "^7.0.0-beta.3",
    "babel-register": "^7.0.0-beta.3",
    "clean-webpack-plugin": "^0.1.19",
    "electron": "2.0.5",
    "electron-packager": "^12.1.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^5.1.0",
    "jest": "^23.4.1",
    "prop-types": "^15.6.2",
    "sinon": "^6.1.4",
    "stylelint": "^9.3.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.3.1",
    "uglifyjs-webpack-plugin": "^1.2.7",
    "webpack": "^4.16.1",
    "webpack-cli": "^3.1.0"
  },
  "version": "1.0.0",
  "license": "MIT",
  "name": "react-electron",
  "url": "https://github.com/developer239/react-electron",
  "author": {
    "name": "Michal Jarnot"
  },
  "keywords": [
    "electron",
    "prop-types",
    "react",
    "react-dom",
    "recompose",
    "styled-components",
    "webpack",
    "eslint",
    "stylelint",
    "jest",
    "enzyme",
    "sinon"
  ]
}
