{
  "name": "electron-es6-react",
  "version": "0.0.0",
  "main": "main.js",
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=develop electron -r babel-register .",
    "lint": "eslint ./renderer --fix && eslint ./main --fix",
    "build": "rm -rf dist && NODE_ENV=production webpack -p",
    "package-mac": "rm -rf release-builds && electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds"
  },
  "dependencies": {
    "electron": "^1.8.2-beta.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "styled-components": "^2.4.0"
  },
  "devDependencies": {
    "@strv/eslint-config-javascript": "^7.9.0",
    "babel-eslint": "^8.2.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^2.0.0-beta.2",
    "babel-preset-react": "^7.0.0-beta.3",
    "babel-register": "^7.0.0-beta.3",
    "electron-packager": "^10.1.1",
    "eslint": "^4.13.1",
    "webpack": "^3.10.0"
  }
}
