{
  "version": "1.0.0",
  "license": "MIT",
  "name": "react-electron-typescript-webpack",
  "url": "https://github.com/developer239/react-electron-typescript-webpack",
  "author": {
    "name": "Michal Jarnot"
  },
  "main": "./dist/main.js",
  "scripts": {
    "build-main": "cross-env NODE_ENV=production webpack --config webpack/main.prod.config.js",
    "build-renderer": "cross-env NODE_ENV=production webpack --config webpack/renderer.prod.config.js",
    "build": "npm run build-main && npm run build-renderer",
    "start-renderer-dev": "webpack-dev-server --config webpack/renderer.dev.config.js",
    "start-main-dev": "webpack --config webpack/main.config.js && electron ./dist/main.js",
    "start-dev": "cross-env npm run start-renderer-dev",
    "prestart": "npm run build",
    "start": "electron .",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "type-check": "tsc",
    "format": "prettier --write '*/**/*.{ts,tsx,css,md,json}'",
    "lint:ts": "eslint 'src/**/*.{ts,tsx}'",
    "lint:css": "stylelint 'src/**/*.{ts,tsx}'"
  },
  "dependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@hot-loader/react-dom": "^16.8.6",
    "@strv/eslint-config-node": "2.0.0",
    "@strv/eslint-config-react": "3.0.3",
    "@strv/eslint-config-typescript": "2.0.0",
    "@strv/stylelint-config-styled-components": "1.1.1",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/react": "^16.8.18",
    "@types/react-dom": "^16.8.4",
    "@types/react-hot-loader": "^4.1.0",
    "@types/webpack-env": "^1.13.3",
    "@typescript-eslint/parser": "1.13.0",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "cross-env": "^6.0.3",
    "css-loader": "^3.2.0",
    "electron": "4.2.11",
    "electron-builder": "^21.2.0",
    "electron-devtools-installer": "^2.2.4",
    "eslint": "6.5.1",
    "eslint-config-prettier": "6.4.0",
    "eslint-plugin-react-hooks": "2.1.2",
    "eslint-plugin-typescript": "0.14.0",
    "file-loader": "^4.2.0",
    "fork-ts-checker-webpack-plugin": "^1.3.4",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.8",
    "image-webpack-loader": "^6.0.0",
    "lint-staged": "^9.4.1",
    "prettier": "^1.18.2",
    "react-hot-loader": "^4.8.8",
    "source-map-loader": "^0.2.4",
    "style-loader": "^1.0.0",
    "stylelint": "^11.0.0",
    "stylelint-config-prettier": "^6.0.0",
    "typescript": "^3.6.3",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.4.1",
    "webpack-merge": "^4.2.1"
  }
}
